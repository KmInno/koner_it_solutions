{
    "openapi": "3.0.0",
    "info": {
        "title": "My API",
        "version": "1.0.0",
        "description": "API documentation for managing projects"
    },
    "servers": [
        {
            "url": "https://koner-i-t-solutions.onrender.com/"
        }
    ],
    "paths": {
        "/api/user": {
            "get": {
                "summary": "Say Hello",
                "responses": {
                    "200": {
                        "description": "A successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "string",
                                    "example": "Hello World!"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/projects": {
            "get": {
                "summary": "Get all projects",
                "responses": {
                    "200": {
                        "description": "A list of projects",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Project"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new project",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Project"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Project created successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    }
                }
            }
        },
        "/projects/{id}": {
            "get": {
                "summary": "Get a project by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the project to retrieve"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Project details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Project"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Project not found"
                    }
                }
            },
            "put": {
                "summary": "Update a project by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the project to update"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Project"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Project updated successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "404": {
                        "description": "Project not found"
                    }
                }
            },
            "delete": {
                "summary": "Delete a project by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "The ID of the project to delete"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Project deleted successfully"
                    },
                    "404": {
                        "description": "Project not found"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Project": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Website Redesign"
                    },
                    "description": {
                        "type": "string",
                        "example": "Revamp the company website to improve user experience and update branding."
                    },
                    "status": {
                        "type": "string",
                        "example": "In Progress"
                    },
                    "start_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-03-01"
                    },
                    "end_date": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-06-01"
                    },
                    "team_members": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "example": ["Alice", "Bob", "Charlie"]
                    },
                    "image_url": {
                        "type": "string",
                        "example": "https://example.com/website-redesign.jpg"
                    }
                }
            }
        }
    }
}