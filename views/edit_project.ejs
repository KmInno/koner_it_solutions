
<body>
    <h1>Edit Project</h1>
    <form action="/projects/edit/<%= project._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= project.title %>" required>
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required><%= project.description %></textarea>
        </div>
        <div>
            <label for="status">Status:</label>
            <select id="status" name="status" required>
                <option value="In Progress" <%= project.status === "In Progress" ? "selected" : "" %>>In Progress</option>
                <option value="Not Started" <%= project.status === "Not Started" ? "selected" : "" %>>Not Started</option>
                <option value="Completed" <%= project.status === "Completed" ? "selected" : "" %>>Completed</option>
            </select>
        </div>
        <div>
            <label for="start_date">Start Date:</label>
            <input type="date" id="start_date" name="start_date" value="<%= project.start_date.toISOString().split('T')[0] %>" required>
        </div>
        <div>
            <label for="end_date">End Date:</label>
            <input type="date" id="end_date" name="end_date" value="<%= project.end_date.toISOString().split('T')[0] %>" required>
        </div>
        <div>
            <label for="team_members">Team Members (comma-separated):</label>
            <input type="text" id="team_members" name="team_members" value="<%= project.team_members.join(', ') %>" required>
        </div>
        <div>
            <label for="image_url">Image URL:</label>
            <input type="url" id="image_url" name="image_url" value="<%= project.image_url %>" required>
        </div>
        <div>
            <button type="submit">Update Project</button>
        </div>
    </form>
</body>
